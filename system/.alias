#!/bin/bash

## Makes reading directory listings easier
## -G: colorize output, -h: sizes human readable, -F: throws a / after a directory, * after an executable, and a @ after a symlink
alias l='ls -GFh'
alias ls='ls -GFh'
alias lh='ls -GFhd .[^.]*'

## Source bash_profile
alias reload="source ~/.bash_profile"

